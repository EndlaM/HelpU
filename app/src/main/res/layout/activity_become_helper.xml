<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_become_helper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.miage.paris10.projetm1.helpu.BecomeHelperActivity">
  <TextView
      android:gravity="center"
      android:textSize="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="22dp"
      android:id="@+id/textView"
      android:text="@string/beHelper"
      android:layout_weight="1"
      android:layout_below="@+id/textInputLayout"
      android:layout_alignParentStart="true" />


  <!-- EC label -->
  <android.support.design.widget.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:text="EC:"
      android:id="@+id/textInputLayout">


  </android.support.design.widget.TextInputLayout>



  <Button
      android:text="@string/Want"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/button_BecomeHelper_valider"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_marginBottom="67dp" />

  <Spinner
      android:id="@+id/spinner_BecomeHelper_ec"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@+id/button_BecomeHelper_valider"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="169dp" />

</RelativeLayout>