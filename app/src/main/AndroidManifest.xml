<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.miage.paris10.projetm1.helpu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/helpu_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark.ActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
                <uses-permission android:name="android.permission.INTERNET" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".BecomeHelperActivity"
            android:theme="@style/AppTheme.Dark.ActionBar" />
        <activity

            android:name=".SearchHelperActivity"
            android:theme="@style/AppTheme.Dark.ActionBar" />
        <activity
            android:name=".ValidationActivity"
            android:theme="@style/AppTheme.Dark.ActionBar" />
        <activity
            android:name=".ValidationDemandeAideActivity"
            android:theme="@style/AppTheme.Dark.ActionBar" />
        <activity

            android:name=".ResetPasswordActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".ListeMessageActivity"
            android:theme="@style/AppTheme.Dark.ActionBar"/>
        <activity android:name=".ChatRoomActivity"
            android:theme="@style/AppTheme.Dark.ActionBar"/>
    </application>

</manifest>